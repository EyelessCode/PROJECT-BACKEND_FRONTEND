generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CentroMedico {
  codigo    Int          @id @default(autoincrement())
  nombre    String
  direccion String
  telefono  String
  RUC       String       @unique
  tomas     TomaSignos[]
}

model Paciente {
  codigo          Int          @id @default(autoincrement())
  cedula          String       @unique
  nombres         String
  fechaNacimiento String
  apellidos       String
  edad            Int
  genero          String
  telefono        String
  tipoSangre      String
  direccion       String? @default("")
  correo          String @unique
  ocupacion       String? @default("ninguno")
  tomas           TomaSignos[]
}

model Enfermera {
  codigo       Int          @id @default(autoincrement())
  cedula       String       @unique
  nombres      String
  apellidos    String
  especialidad String
  tomas        TomaSignos[]
}

model TipoSigno {
  codigo         Int               @id @default(autoincrement())
  descripcion    String
  unidad         String
  valorMinimo    Float
  valorMaximo    Float
  signosPaciente SignosPacientes[]
}

model TomaSignos {
  numero         Int               @id @default(autoincrement())
  fecha          String
  centroMedicoId Int
  pacienteId     Int
  enfermeraId    Int
  observacion    String
  centroMedico   CentroMedico      @relation(fields: [centroMedicoId], references: [codigo])
  paciente       Paciente          @relation(fields: [pacienteId], references: [codigo])
  enfermera      Enfermera         @relation(fields: [enfermeraId], references: [codigo])
  signosPaciente SignosPacientes[]
}

model SignosPacientes {
  linea        Int        @id @default(autoincrement())
  valor        Float
  TipoSignoId  Int
  tomaSignosId Int
  fecha        String
  comentario   String? @default("")
  tipoSigno    TipoSigno  @relation(fields: [TipoSignoId], references: [codigo])
  tomaSignos   TomaSignos @relation(fields: [tomaSignosId], references: [numero])
}